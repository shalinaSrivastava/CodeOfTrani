<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.elearn.trainor.SafetyCards.VerifyInfo">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/custom_page_header" />

    <ScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/verify_info_des1"
                    android:textColor="#373a3c"
                    android:textSize="7.5pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/verify_info_des2"
                    android:textColor="#373a3c"
                    android:textSize="7.5pt" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_unveified"
                android:layout_below="@+id/ll_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_unverified"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="Unverified contact info"
                    android:textColor="#373a3c" />
                <View
                    android:id="@+id/line_view1"
                    android:layout_below="@+id/txt_unverified"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#c7c7c7" />

                <LinearLayout
                    android:id="@+id/ll_verify_email"
                    android:layout_below="@+id/line_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rippel"
                    android:backgroundTint="@android:color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/validCardImage"
                            android:singleLine="true"
                            android:text="E-mail"
                            android:textColor="#c7c7c7"/>


                        <TextView
                            android:id="@+id/txt_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_email"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/validCardImage"
                            android:singleLine="true"
                            android:text="vidar.teigen@trainor.no" />


                        <TextView
                            android:id="@+id/txt_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_email_id"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/validCardImage"
                            android:singleLine="true"
                            android:text="Trainor Elsikkerhet AS" />

                        <ImageView
                            android:id="@+id/validCardImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_forward" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:id="@+id/line_view2"
                    android:layout_below="@+id/ll_verify_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#c7c7c7" />

                <LinearLayout
                    android:id="@+id/ll_verify_phone"
                    android:layout_below="@+id/line_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rippel"
                    android:backgroundTint="@android:color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/validCardImage1"
                            android:singleLine="true"
                            android:text="Phone"
                            android:textColor="#c7c7c7"/>


                        <TextView
                            android:id="@+id/txt_phone_no"
                            android:layout_below="@+id/txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/validCardImage1"
                            android:singleLine="true"
                            android:text="+47 913 83 027" />

                        <TextView
                            android:id="@+id/txt_private"
                            android:layout_below="@+id/txt_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/validCardImage1"
                            android:singleLine="true"
                            android:text="private" />

                        <ImageView
                            android:id="@+id/validCardImage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_forward" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line_view3"
                    android:layout_below="@+id/ll_verify_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#c7c7c7" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_frequently_asked_qus"
                android:layout_below="@+id/rl_unveified"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_search">

                <TextView
                    android:id="@+id/txt_add_more_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Frequently asked questions"
                    android:textSize="8pt" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_veified"
                android:layout_below="@+id/rl_frequently_asked_qus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_verified_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="0dp"
                    android:text="Verified contact info"
                    android:textColor="#373a3c" />
                <LinearLayout
                    android:id="@+id/ll_verified_email"
                    android:layout_below="@+id/txt_verified_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rippel"
                    android:backgroundTint="@android:color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_verified_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/verified_validCardImage"
                            android:singleLine="true"
                            android:text="E-mail"
                            android:textColor="#c7c7c7"/>


                        <TextView
                            android:id="@+id/txt_verified_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_verified_email"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/verified_validCardImage"
                            android:singleLine="true"
                            android:text="vidar.teigen@trainor.no" />


                        <TextView
                            android:id="@+id/txt_verified_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_verified_email_id"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/verified_validCardImage"
                            android:singleLine="true"
                            android:text="Trainor Elsikkerhet AS" />

                        <ImageView
                            android:id="@+id/verified_validCardImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_forward" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:id="@+id/verified_line_view2"
                    android:layout_below="@+id/ll_verified_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#c7c7c7" />
                <LinearLayout
                    android:id="@+id/ll_verified_phone"
                    android:layout_below="@+id/verified_line_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rippel"
                    android:backgroundTint="@android:color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_verified_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/verified_validCardImage1"
                            android:singleLine="true"
                            android:text="Phone"
                            android:textColor="#c7c7c7"/>


                        <TextView
                            android:id="@+id/txt_verified_phone_no"
                            android:layout_below="@+id/txt_verified_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/verified_validCardImage1"
                            android:singleLine="true"
                            android:text="+47 913 83 027" />

                        <TextView
                            android:id="@+id/txt_verified_private"
                            android:layout_below="@+id/txt_verified_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_toStartOf="@+id/verified_validCardImage1"
                            android:singleLine="true"
                            android:text="private" />

                        <ImageView
                            android:id="@+id/verified_validCardImage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_forward" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:id="@+id/verified_line_view3"
                    android:layout_below="@+id/ll_verified_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#c7c7c7" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
