<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.elearn.trainor.SafetyCards.ProcessVerifyInfo">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/custom_page_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_verify_email_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_verify_email_des1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text=""
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/txt_verify_email_des2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_verify_email_des1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text="If there are safety cards connected to the e-mail they should be syncronized within a few minutes."
                    android:textSize="8pt" />

                <RelativeLayout
                    android:id="@+id/rl_verify_more_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt_verify_email_des2"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_search">

                    <TextView
                        android:id="@+id/txt_add_more_cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Verify more contacts"
                        android:textSize="8pt" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_verify_phone_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_verify_phone_des1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text=""
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/txt_verify_phone_des2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_verify_phone_des1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text="Please enter the code from the text in the box below"
                    android:textSize="8pt" />

                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt_verify_phone_des2"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="100dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_search"
                    android:singleLine="true"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_submit_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_code"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="88dp"
                    android:background="@drawable/shadow_scard">

                    <Button
                        android:id="@+id/btn_submit_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rippel"
                        android:backgroundTint="#27ae60"
                        android:text="Submit code"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="8pt" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_frequently_asked_qus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_frequently_asked_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:text="@string/frequently_asked_questions"
                    android:textSize="8pt" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>