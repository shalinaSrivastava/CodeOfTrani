                                <LinearLayout
                                    android:id="@+id/llinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rippel"
                                    android:clickable="true">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:background="@drawable/rounded_corner"
                                        android:backgroundTint="@color/settings">-->

                <LinearLayout
                    android:id="@+id/llinfo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rippel"
                    android:backgroundTint="@color/settings"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imgInfoCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_notation"
                        android:clickable="false" />
                </LinearLayout>
                <!--     </LinearLayout>
                 </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ll_scorm_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rippel">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/settings"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/settings"
                            android:gravity="center">

                            <Button
                                android:id="@+id/img_course_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorPrimary"
                                android:text="S"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
