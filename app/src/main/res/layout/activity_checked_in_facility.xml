<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/custom_page_header" />

    <RelativeLayout
        android:id="@+id/rl_checked_in_facility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_checked_in_facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#59a6ea">

            <TextView
                android:id="@+id/txtELearningCourse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Checked in to facility"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_facility_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_checked_in_facility"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/rl_guest_hour_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_semi_facility">

                <TextView
                    android:id="@+id/txt_companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="High voltage lab 875643"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/txt_hour_spent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_companyName"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="2hr and 13min since entry"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/txt_guest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_hour_spent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="2 guests"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/txt_security_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_guest"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Phone no security: 815 49 300"
                    android:textSize="8pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_extend_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_guest_hour_des"
                android:background="@drawable/custom_rectangle_shape">

                <RelativeLayout
                    android:id="@+id/rl_extend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="15dp">

                    <ImageView
                        android:id="@+id/iv_extend_time"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_extend_time" />

                    <TextView
                        android:id="@+id/txt_extend_stay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_extend_time"
                        android:text="Extend stay"
                        android:textSize="9pt" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_notify_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_extend_time_layout"
                android:background="@drawable/rippel"
                android:backgroundTint="@color/red">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_report_entery"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_report_entry" />

                    <TextView
                        android:id="@+id/txt_report_entery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv_report_entery"
                        android:text="Notify exit from facility"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_your_safety_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_facility_des"
            android:background="#59a6ea">

            <TextView
                android:id="@+id/txt_your_safety_card"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="Your safety cards"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_enter_new_facility"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/rippel"
        android:backgroundTint="#27ae60"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_report_entry"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_report_entry" />

            <TextView
                android:id="@+id/txt_register_new_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_report_entry"
                android:text="Register entrance to new facility"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_update_hours_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_facility_update_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Reporting entry into HÃ¸yspenningslab 875643"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txt_facility_update_hours_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_facility_update_entry"
            android:layout_marginTop="20dp"
            android:text="You have been in the facility for 2 hrs and 31 minutes. You have 29 minutes left before being notified of exit."
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txt_add_more_hour_des1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_facility_update_hours_des"
            android:layout_marginTop="0dp"
            android:text="If you want you can add more hours."
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txt_add_more_hour_des2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_add_more_hour_des1"
            android:layout_marginTop="20dp"
            android:text="How many hours are you planning to work in the facility?"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txt_add_more_hour_des3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_add_more_hour_des2"
            android:layout_marginTop="0dp"
            android:text="This gives you and the operations center a reminder when the given time has passed." />

        <EditText
            android:id="@+id/edt_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_add_more_hour_des3"
            android:drawableStart="@drawable/ic_extend_time"
            android:drawablePadding="5dp"
            android:hint="@string/planned_work_in_hours"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/txt_updated_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_hours"
            android:layout_marginTop="15dp"
            android:text="New time left is 2 hours and 29 minutes."
            android:textSize="8pt" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_update_work_hr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/rippel"
        android:backgroundTint="#27ae60"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_update_work_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Update work hours"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

    </RelativeLayout>
</RelativeLayout>